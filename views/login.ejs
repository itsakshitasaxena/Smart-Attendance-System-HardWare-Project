<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Attendify | Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body
    class="bg-gradient-to-br from-blue-500 via-teal-500 to-cyan-400 min-h-screen flex items-center justify-center font-sans"
  >
    <div
      class="bg-white/95 backdrop-blur-lg shadow-2xl rounded-3xl w-full max-w-md p-10 animate-fade-in"
    >
      <!-- Logo + Title -->
      <h2
        class="text-4xl font-extrabold text-center text-blue-700 drop-shadow mb-2"
      >
        Attendify
      </h2>
      <p class="text-center text-gray-600 mb-8 text-sm tracking-wide">
        Login to mark your attendance securely
      </p>

      <!-- Login Form -->
      <form action="/login" method="POST" class="space-y-6">
        <!-- Username -->
        <div>
          <label class="block text-gray-700 font-medium mb-1">Username</label>
          <input
            type="text"
            name="username"
            required
            minlength="3"
            placeholder="Enter your name"
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-[3px] focus:ring-blue-400 transition"
          />
        </div>

        <!-- Roll Number -->
        <div>
          <label class="block text-gray-700 font-medium mb-1">Roll No</label>
          <input
            type="number"
            name="rollNo"
            required
            min="1"
            placeholder="Eg: 12022001"
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-[3px] focus:ring-blue-400 transition"
          />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-gray-700 font-medium mb-1">Password</label>
          <input
            type="password"
            name="password"
            required
            minlength="5"
            placeholder="Enter your password"
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-[3px] focus:ring-blue-400 transition"
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-blue-600 text-white font-bold py-3 rounded-xl shadow-lg hover:bg-blue-700 hover:shadow-xl transition transform hover:-translate-y-0.5"
        >
          Login
        </button>
      </form>

      <!-- Signup Link -->
      <p class="text-center text-gray-600 text-sm mt-7">
        Donâ€™t have an account?
        <a href="/signup" class="text-blue-700 font-semibold hover:underline"
          >Sign up here</a
        >
      </p>
    </div>
  </body>

  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(15px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fade-in {
      animation: fade-in 0.6s ease-out;
    }
  </style>
</html>
