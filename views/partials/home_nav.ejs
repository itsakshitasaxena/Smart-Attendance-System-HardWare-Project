<script src="https://cdn.tailwindcss.com"></script>

<nav
  class="bg-blue-700/90 backdrop-blur-md fixed w-full z-10 top-0 left-0 shadow-xl border-b border-blue-800 font-sans transition-all"
>
  <div class="max-w-7xl mx-auto px-5 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Brand -->
      <a
        href="/"
        class="text-white font-extrabold text-3xl tracking-wider drop-shadow"
      >
        Attendify
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-6 ml-auto">
        <% if (user) { %>
        <span class="text-white text-lg font-medium drop-shadow">
          Hi, <%= user.username %>
        </span>

        <a
          href="/logout"
          class="bg-red-600 hover:bg-red-700 px-5 py-2 rounded-xl text-white font-semibold transition transform hover:scale-[1.05] shadow-md"
        >
          Logout
        </a>

        <% } else { %>
        <a
          href="/login"
          class="bg-green-600 hover:bg-green-700 px-5 py-2 rounded-xl text-white text-lg font-semibold transition transform hover:scale-[1.05] shadow-md"
        >
          Login
        </a>
        <% } %>
      </div>

      <!-- Mobile Hamburger -->
      <div class="md:hidden">
        <button
          id="menu-btn"
          class="text-white focus:outline-none hover:scale-110 transition"
        >
          <svg
            class="w-8 h-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-blue-700/95 px-4 pb-4 space-y-4 backdrop-blur-md shadow-lg text-center"
  >
    <% if (user) { %>

    <p class="text-white text-lg font-medium pt-2 drop-shadow">
      Hi, <%= user.username %>
    </p>

    <a
      href="/logout"
      class="block bg-red-600 hover:bg-red-700 px-4 py-2 rounded-xl text-white font-semibold transition transform hover:scale-[1.05] shadow"
    >
      Logout
    </a>

    <% } else { %>

    <a
      href="/login"
      class="block bg-green-600 hover:bg-green-700 px-4 py-2 rounded-xl text-white text-lg font-semibold transition transform hover:scale-[1.05] shadow-md"
    >
      Login
    </a>

    <% } %>
  </div>
</nav>

<script>
  // Toggle mobile menu
  const btn = document.getElementById("menu-btn");
  const menu = document.getElementById("mobile-menu");

  if (btn && menu) {
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  }
</script>
